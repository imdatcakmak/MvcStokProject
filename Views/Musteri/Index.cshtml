@using MvcStok.Models.Entity
@model List<Tbl_Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p><b>Aranacak Müşteri Adı:</b></p> @Html.TextBox("p")
    <input type="submit" value="Ara"  class="btn btn-group-xs"/>
}
<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID </th>
        <th>MÜŞTERİ AD</th>
        <th>MÜŞTERİ SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach(var mstr in Model)
        {
        <tr>
            <th>@mstr.MUSTERIID</th>
            <td>@mstr.MUSTERIAD</td>
            <td>@mstr.MUSTERISOYAD</td>
            <td><a href="/MUSTERI/SIL/@mstr.MUSTERIID" class="btn btn-danger">SİL</a> </td>
            <td><a href="/MUSTERI/MusteriGetir/@mstr.MUSTERIID" class="btn btn-success">GÜNCELLE</a> </td>
            <td>@Html.ActionLink("SİL BUTONU","SIL",new {id=mstr.MUSTERIID },new { @class="btn btn-warning",onclick="return confirm('Silmek istediğinize emin misiniz ?')" })</td>
        </tr>
        }
    </tbody>
</table>
<a href="/MUSTERI/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>

